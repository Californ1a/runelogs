  <meta charset="utf-8">
  <title>RuneLogs - Keep track of your Runescape account history</title>
  <meta name="description" content="Runelogs is a basic archive site for Runescape players who want to keep a permanent history of their account activity.">
  <meta name="author" content="@dreadnip">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="/css/balloon.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <link rel="icon" type="image/png" href="/img/favicon2.png">
</head>
<body>
	<header class="header">
    
    <section class='search'>
      {% if player is defined %}
      <form action="/{{ player }}" method="post">
          <input type="text" name="search" aria-label="search" placeholder="Search..." value="{{ (search is defined) ? search : '' }}" />
          <input type="submit" aria-label="search-submit" value="" />
      </form>
      {% endif %}
    </section>
  
		<div class="logo-container">
      <a href="/"><img src="/img/icon.png" alt="The Runelogs logo"/></a>
    </div>
    <div class="toggle-container">
      <a class="night-mode-toggle" href="" title="Toggle between night and day mode"></a>
    </div>
	</header>